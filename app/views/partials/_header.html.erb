<header class="d-flex flex-wrap align-items-center justify-content-between justify-content-md-between mb-2">
<a href="<%= user_signed_in? ? authenticated_root_path : unauthenticated_root_path %>" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
    <%= image_tag "taskr_logo.png", class: "logo" %>
</a>
<% if user_signed_in? %>
    <div class="col-md-3 d-flex gap-3 justify-content-end align-items-end">
        <p style="color: #8d021f;">Welcome, <%= current_user.email.split("@").first.capitalize %>!</p>
        <button type="button" class="button">
            <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
        </button>
    </div>
<% else %>
    <div class="col-md-3 text-end">
        <button type="button" class="button">
            <%= link_to "Login", new_session_path(resource_name) %>
        </button>
        <button type="button" class="button">
            <%= link_to "Sign up", new_registration_path(resource_name) %>
        </button>
    </div>
<% end %>
</header>

