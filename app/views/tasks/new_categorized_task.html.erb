<%= form_with(model: @task) do |form| %>
<div class="container content content-lgn">
  <% if @task.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <% @task.errors.each do |error| %>
          <%= error.full_message %>
        <% end %>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label 'Task', class: "form-label" %>
    <%= form.text_field :body, class: "form-control", placeholder: "Type your task here..." %>
  </div>

  <div class="field mb-3">
    <%= form.label "Categories", class: "form-label" %>
    <%= form.text_field :categories, value: @category.title, class: "form-control", placeholder: "Category 1, Category 2... " %>
    <div class="form-text">
      You can add multiple categories by separating each category with a comma( , )
    </div>
  </div>

    <div class="field mb-4">
    <%= form.label "Finish before", class: "form-label" %><br>
    <%= form.date_select :finish_before, order: [:month, :day, :year], :include_blank => true %>
  </div>

  <div class="actions d-flex flex-column justify-content-center align-items-center">
    <%= form.submit 'Set Task', class: "button action-button" %>
  </div>
  </div>
<% end %>
