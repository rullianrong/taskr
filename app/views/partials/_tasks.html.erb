<div>
    <h3>All Tasks</h3>
</div>
<div class="d-flex flex-wrap gap-1 mx-auto justify-content-center">
    <% current_user.tasks.each do |task| %>
        <div>
            <a href="/tasks/<%= task.id %>" class="each-task d-flex gap-1 flex-column">
                <p style="font-size: .5rem;color: var(--secondary);">Due: <%= task.finish_before.strftime('%b/%d/%Y') %></p>
                <p><%= task.body%></p>
            </a>
        </div>
    <% end %>
</div>