<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @task.body %>
</p>

<p>
  <strong>Finish before:</strong>
  <%= @task.finish_before %>
</p>

<strong>Tags:</strong>
<% @task.categories.each do |category|%>
  <%= link_to category do %>
    <span><%= category.title%></span>
  <% end %> 
<% end %>

<p>
  <%= check_box_tag @task.checked %> 
  <span>Done</span>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
